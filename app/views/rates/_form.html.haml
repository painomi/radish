-# frozen_string_literal: true
= simple_form_for(@rate) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :value
    = f.input :memo
    = f.association :rateable

  .form-actions
    = f.button :submit
